{# src/ArticleBundle/Resources/views/Author/index.html.twig #}
{% extends 'ArticleBundle::layout.html.twig' %}

{% block body %}
  <h2>Authors: </h2>
  {% for author in authors %}
    <p><a href="{{ path('ArticleBundle_author_show', { 'id': author.id}) }}">{{author.name }}</a> (url: {{author.url}})</p>
  {% endfor %}
{% endblock %}
